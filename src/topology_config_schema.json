{
    "id": "https://github.com/bergloman/NodeProcessManager:topology",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "properties": {
        "general": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string"
                },
                "coordination_port": {
                    "type": "integer"
                },
                "heartbeat": {
                    "type": "integer"
                },
                "initialization": {
                    "type": "object",
                    "properties": {
                        "working_dir": {
                            "type": "string"
                        },
                        "cmd": {
                            "type": "string"
                        },
                        "init": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    },
                    "required": [
                        "working_dir",
                        "cmd"
                    ]
                },
                "shutdown": {
                    "type": "object",
                    "properties": {
                        "working_dir": {
                            "type": "string"
                        },
                        "cmd": {
                            "type": "string"
                        }
                    },
                    "required": [
                        "working_dir",
                        "cmd"
                    ]
                }
            },
            "required": [
                "name",
                "coordination_port",
                "heartbeat"
            ]
        },
        "workers": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string"
                    }
                },
                "required": [
                    "name"
                ]
            }
        },
        "spouts": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "worker": {
                        "type": "string"
                    },
                    "type": {
                        "enum": [
                            "subproc",
                            "inproc",
                            "sys"
                        ],
                        "default": "subproc"
                    },
                    "disabled": {
                        "type": "boolean",
                        "default": true
                    },
                    "working_dir": {
                        "type": "string"
                    },
                    "cmd": {
                        "type": "string"
                    },
                    "init": {
                        "type": "object",
                        "additionalProperties": true
                    }
                },
                "required": [
                    "name",
                    "worker",
                    "working_dir",
                    "cmd",
                    "init"
                ]
            }
        },
        "bolts": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "worker": {
                        "type": "string"
                    },
                    "type": {
                        "enum": [
                            "subproc",
                            "inproc",
                            "sys"
                        ]
                    },
                    "disabled": {
                        "type": "boolean",
                        "default": true
                    },
                    "working_dir": {
                        "type": "string"
                    },
                    "cmd": {
                        "type": "string"
                    },
                    "inputs": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "properties": {
                                "source": {
                                    "type": "string"
                                },
                                "stream_id": {
                                    "type": "string"
                                }
                            },
                            "required": [
                                "source"
                            ]
                        }
                    },
                    "init": {
                        "type": "object",
                        "additionalProperties": true
                    }
                },
                "required": [
                    "name",
                    "worker",
                    "working_dir",
                    "cmd",
                    "inputs",
                    "init"
                ]
            }
        },
        "variables": {
            "type": "object",
            "patternProperties": {
                "^.*$": {
                    "type": "string"
                }
            }
        }
    },
    "required": [
        "general",
        "workers",
        "spouts",
        "bolts",
        "variables"
    ]
}
